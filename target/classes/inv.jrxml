<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="InvoiceReport" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Parameters -->
    <parameter name="customerName" class="java.lang.String"/>
    <parameter name="totalPrice" class="java.lang.Double"/>
    <parameter name="currentDate" class="java.util.Date"/>

    <!-- Fields -->
    <field name="item" class="java.lang.String"/>

    <!-- Title -->
    <title>
        <band height="50">
            <staticText>
                <reportElement x="200" y="10" width="200" height="30"/>
                <textElement textAlignment="Center">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[Invoice]]></text>
            </staticText>
        </band>
    </title>

    <!-- Page Header -->
    <pageHeader>
        <band height="50">
            <textField>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA["Customer: " + $P{customerName}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="25" width="300" height="20"/>
                <textFieldExpression><![CDATA["Date & Time: " + new java.text.SimpleDateFormat("yyyy-MM-dd HH:mm:ss").format($P{currentDate})]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <!-- Column Header -->
    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="200" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Item Name]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{item}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- Summary -->
    <summary>
        <band height="70">
            <textField>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Price: " + $P{totalPrice} + " ILS"]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="30" width="300" height="20"/>
                <textElement>
                    <font size="12" isItalic="true"/>
                </textElement>
                <text><![CDATA[Thank you for your order!]]></text>
            </staticText>
        </band>
    </summary>

</jasperReport>
